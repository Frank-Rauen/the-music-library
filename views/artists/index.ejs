<%- include('../partials/header') %>
<table id="list">
    <thead>
      <tr>
        <th>Name</th>
        <th>Genre</th>
        <th>Year<br>Founded</th>
      </tr>
    </thead>
    <tbody>
      <% artists.forEach(function(a) { %>
        <tr>
          <td><%= a.name %></td>
          <td><%= a.genre %></td>
          <td><%= a.yearFounded %></td>
          <td><a href="/artists/<%= a._id %>">DETAILS</a></td>
          <td>
            <form action="/artists/<%= a._id %>?_method=DELETE" method="POST">
              <button id="deletebtn" type="submit">Delete</button>
            </form>
            </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
